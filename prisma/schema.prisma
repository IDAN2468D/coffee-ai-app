generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}


model User {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  password      String?
  image         String?
  accounts      Account[]
  sessions      Session[]
  orders        Order[]
  coffeeImages  CoffeeImage[]
  reviews       Review[]
  notifications Notification[]
  likes         Like[]
  comments      Comment[]

  favoriteIds   String[]  @db.ObjectId
  isAdmin       Boolean   @default(false)
  points        Int       @default(0)
  subscriptionTier   String?   // 'Silver', 'Gold', 'Platinum'
  subscriptionStatus String?   // 'active', 'expired', 'canceled'
  subscriptionExpiry DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  blends        Blend[]
}

model Account {
  id                 String  @id @default(auto()) @map("_id") @db.ObjectId
  userId             String  @db.ObjectId
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?  @db.String
  access_token       String?  @db.String
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?  @db.String
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  sessionToken String   @unique
  userId       String   @db.ObjectId
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Product {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  description String
  price       Float
  isArchived  Boolean  @default(false)
  slug        String?
  images      Image[] 
  category    Category? @relation(fields: [categoryId], references: [id])
  categoryId  String?   @db.ObjectId
  // Backward compatibility
  image       String?
  // Relations
  reviews     Review[]
  orderItems  OrderItem[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Category {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  products  Product[]
}

model Image {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  url       String
  productId String   @db.ObjectId
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model CoffeeImage {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  url       String
  prompt    String
  isPublic  Boolean  @default(true)
  userId    String   @db.ObjectId
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
  likes     Like[]
  comments  Comment[]
}

model Like {
  id            String      @id @default(auto()) @map("_id") @db.ObjectId
  coffeeImageId String      @db.ObjectId
  coffeeImage   CoffeeImage @relation(fields: [coffeeImageId], references: [id], onDelete: Cascade)
  userId        String      @db.ObjectId
  user          User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt     DateTime    @default(now())

  @@unique([coffeeImageId, userId])
}

model Comment {
  id            String      @id @default(auto()) @map("_id") @db.ObjectId
  text          String
  coffeeImageId String      @db.ObjectId
  coffeeImage   CoffeeImage @relation(fields: [coffeeImageId], references: [id], onDelete: Cascade)
  userId        String      @db.ObjectId
  user          User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt     DateTime    @default(now())
}

model Order {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    String   @db.ObjectId
  user      User     @relation(fields: [userId], references: [id])
  items     OrderItem[]
  shippingAddress Json?
  total     Float
  status    String   @default("pending")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model OrderItem {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  orderId   String  @db.ObjectId
  order     Order   @relation(fields: [orderId], references: [id])
  productId String  @db.ObjectId
  product   Product @relation(fields: [productId], references: [id])
  quantity  Int
  size      String? // S, M, L for coffee sizes
}

model Review {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  rating    Int
  comment   String
  userId    String   @db.ObjectId
  user      User     @relation(fields: [userId], references: [id])
  productId String   @db.ObjectId
  product   Product  @relation(fields: [productId], references: [id])
  createdAt DateTime @default(now())
  isVerified Boolean  @default(false)
}

model Notification {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    String   @db.ObjectId
  user      User     @relation(fields: [userId], references: [id])
  message   String
  type      String   // 'order_status', 'promo', 'system'
  read      Boolean  @default(false)
  createdAt DateTime @default(now())
}



model Blend {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  base      String
  milk      String
  flavor    String
  userId    String   @db.ObjectId
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
}
